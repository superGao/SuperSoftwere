<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/w3_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="superSoftwere3"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/w3_img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/w3_tv1"
        android:layout_marginTop="20dp"
        android:src="@drawable/w520" />

    <ImageView
        android:id="@+id/w3_img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/w3_tv1"
        android:layout_marginTop="50dp"
        android:src="@drawable/w521" />

    <ImageView
        android:id="@+id/w3_img3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/w3_img1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/w522" />

    <ImageView
        android:id="@+id/w3_img6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/w3_img1"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/w530" />

    <ImageView
        android:id="@+id/w3_img4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/w3_img3"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/w523" />
    <ImageView
        android:id="@+id/w3_img8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/w3_img3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/w531" />

    <ImageView
        android:id="@+id/enter_btn_id"
        android:layout_below="@id/w3_img8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/enter_click"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
