<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 手机号码-->
            <LinearLayout
                style="@style/LoginLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/LoginViewStyle"
                    android:layout_width="60dp"
                    android:gravity="center_vertical"
                    android:text="用户名："
                    android:textSize="@dimen/text_30"
                    android:textColor="#666" />

                <EditText
                    android:id="@+id/edt_username"
                    style="@style/LoginViewStyle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:hint="请输入用户名"
                    android:textColor="@color/edittext_color" />
            </LinearLayout>
            <ImageView
                style="@style/LoginLayoutStyle2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/line_horizontal_2"/>
            <!-- 密码 -->
            <LinearLayout
                style="@style/LoginLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/LoginViewStyle"
                    android:layout_width="60dp"
                    android:gravity="center_vertical"
                    android:text="密　码："
                    android:textSize="@dimen/text_30"
                    android:textColor="#666" />

                <EditText
                    android:id="@+id/edt_pwd"
                    style="@style/LoginViewStyle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="6-18位字符"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/edittext_color"
                    android:textSize="14sp"/>
            </LinearLayout>
            <ImageView
                style="@style/LoginLayoutStyle2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/line_horizontal_2"/>
            <RelativeLayout
                style="@style/LoginLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/space_60"
                    android:background="@drawable/button_selector"
                    android:text="@string/btn_login"
                    android:textColor="@color/text_btn_common"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_login"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_28">
                    <TextView
                        android:id="@+id/tv_forget_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_24"
                        android:layout_gravity="right"
                        android:text="@string/label_forget_pwd"
                        android:textColor="#168fdc"
                        android:textSize="@dimen/text_30" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>